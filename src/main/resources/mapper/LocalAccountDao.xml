<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.organization.ylcsys.dao.LocalAccountDao">
	<resultMap id="localAccountMap" type="com.organization.ylcsys.entity.LocalAccount">
		<id column="laid" property="id" />
		<result column="account_string" property="accountString" />
		<result column="password_string" property="passwordString" />
		<result column="create_time" property="createTime" />
		<result column="last_edit_time" property="lastEditTime" />
		<result column="uiid" property="userId" />
		<result column="uiname" property="userNameString" />
	</resultMap>
	<select id="queryLocalAccountAll" resultMap="localAccountMap" resultType="com.organization.ylcsys.entity.LocalAccount">
		SELECT
		la.id laid,
		la.user_id,
		la.account_string,
		la.password_string,
		la.create_time,
		la.last_edit_time,
		ui.id uiid,
		ui.name uiname
		FROM
		ylc_local_account la
		INNER JOIN
		ylc_user_info ui
		ON
		ui.id=la.user_id
	</select>
	<select id="queryLocalAccountByTargetItem" resultMap="localAccountMap" resultType="com.organization.ylcsys.entity.LocalAccount">
		SELECT
		la.id,
		la.user_id,
		la.account_string,
		la.password_string,
		la.create_time,
		la.last_edit_time,
		ui.id uiid,
		ui.name uiname
		FROM
		ylc_local_account la
		INNER JOIN
		ylc_user_info ui
		ON
		ui.id=la.user_id
		<where>
			<if test="targetItem.id>0">
			and la.id = #{targetItem.id}
			</if>
			<if test="targetItem.userId>0">
			and la.user_id = #{targetItem.userId}
			</if>
			<if test="targetItem.accountString!=null">
			and la.account_string = #{targetItem.accountString}
			</if>
			<if test="targetItem.passwordString!=null">
			and la.password_string = #{targetItem.passwordString}
			</if>
		</where>
	</select>
	<insert id="insertIntoLocalAccountByTargetItem" parameterType="com.organization.ylcsys.entity.LocalAccount"
		useGeneratedKeys="true">
		INSERT INTO
		ylc_local_account(user_id,account_string,
		password_string,create_time,last_edit_time)
		VALUES
		(#{targetItem.userId},#{targetItem.accountString},#{targetItem.passwordString},
		#{targetItem.createTime},#{targetItem.lastEditTime})
	</insert>
	<update id="updateLocalAccountByTargetItem" parameterType="com.organization.ylcsys.entity.LocalAccount"
		>
		UPDATE ylc_local_account
		<set>
			<if test="targetItem.accountString!=null">account_string=#{targetItem.accountString},</if>
			<if test="targetItem.passwordString!=null">password_string=#{targetItem.passwordString},</if>
			<if test="targetItem.createTime!=null">create_time=#{targetItem.createTime},</if>
			<if test="targetItem.lastEditTime!=null">last_edit_time=#{targetItem.lastEditTime}</if>
		</set>
		WHERE
		id=#{targetItem.id}
	</update>
	<delete id="deleteLocalAccountByTargetItem">
		DELETE FROM
		ylc_local_account
		WHERE
		id=#{targetItem.id}
	</delete>
</mapper>
    