<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.organization.ylcsys.dao.YouthOrgDao">
	<resultMap id="youthOrgMap" type="com.organization.ylcsys.entity.YouthOrg">
		<id column="yoid" property="id" />
		<result column="name" property="name" />
		<result column="user_id" property="userId" />
		<result column="uiname" property="userNameString" />
		<result column="content" property="content" />
		<result column="create_time" property="createTime" />
		<result column="last_edit_time" property="lastEditTime" />
	</resultMap>
	<select id="queryYouthOrgAll" resultMap="youthOrgMap" resultType="com.organization.ylcsys.entity.YouthOrg">
		SELECT
		yo.id yoid,
		yo.name,
		yo.user_id,
		yo.content,
		yo.create_time,
		yo.last_edit_time,
		ui.name uiname
		FROM
		ylc_youth_org yo
		INNER JOIN
		ylc_user_info ui
		ON
		yo.user_id=ui.id
	</select>
	<select id="queryYouthOrgByTargetItem" resultMap="youthOrgMap"  resultType="com.organization.ylcsys.entity.YouthOrg">
		SELECT
		yo.id yoid,
		yo.name,
		yo.user_id,
		yo.content,
		yo.create_time,
		yo.last_edit_time,
		ui.name uiname
		FROM
		ylc_youth_org
		INNER JOIN
		ylc_user_info ui
		ON
		yo.user_id=ui.id
		<where>
			<if test="targetItem.id>0">
			and id = #{targetItem.id}
			</if>
			<if test="targetItem.userId>0">
			and user_id = #{targetItem.userId}
			</if>
		</where>
	</select>
	<insert id="insertIntoYouthOrgByTargetItem" parameterType="com.organization.ylcsys.entity.YouthOrg"
		useGeneratedKeys="true">
		INSERT INTO
		ylc_youth_org(name,user_id,content,
		create_time,last_edit_time)
		VALUES
		(#{targetItem.name},#{targetItem.userId},#{targetItem.content},
		#{targetItem.createTime},#{targetItem.lastEditTime})
	</insert>
	<update id="updateYouthOrgByTargetItem" parameterType="com.organization.ylcsys.entity.YouthOrg"
		>
		UPDATE ylc_youth_org
		<set>
			<if test="targetItem.name!= null">name=#{targetItem.name},</if>
			<if test="targetItem.userId!= null">user_id=#{targetItem.userId},</if>
			<if test="targetItem.content!= null">content=#{targetItem.content},</if>
			<if test="targetItem.lastEditTime!= null">last_edit_time=#{targetItem.lastEditTime}</if>
		</set>
		WHERE
		id = #{targetItem.id}
	</update>
	<delete id="deleteYouthOrgByTargetItem">
		DELETE FROM
		ylc_youth_org
		WHERE
		id = #{targetItem.id}
	</delete>
</mapper>
    