<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.organization.ylcsys.dao.PartyActivistDao">
	<resultMap id="partyActivistMap" type="com.organization.ylcsys.entity.PartyActivist">
		<id column="paid" property="id" />
		<result column="user_id" property="userId" />
		<result column="uiname" property="userNameString" />
		<result column="apply_date" property="applyDate" />
		<result column="is_checked" property="isChecked" />
		<result column="is_checked_opinion" property="isCheckedOpinion" />
		<result column="create_time" property="createTime" />
		<result column="last_edit_time" property="lastEditTime" />
	</resultMap>
	<select id="queryPartyActivistAll" resultMap="partyActivistMap" resultType="com.organization.ylcsys.entity.PartyActivist">
		SELECT
		pa.id paid,
		pa.user_id,
		pa.apply_date,
		pa.is_checked,
		pa.is_checked_opinion,
		pa.create_time,
		pa.last_edit_time,
		ui.name uiname
		FROM
		ylc_party_activist pa
		INNER JOIN
		ylc_user_info ui
		ON
		pa.user_id=ui.id
	</select>
	<select id="queryPartyActivistByTargetItem" resultMap="partyActivistMap"  resultType="com.organization.ylcsys.entity.PartyActivist">
		SELECT
		pa.id paid,
		pa.user_id,
		pa.apply_date,
		pa.is_checked,
		pa.is_checked_opinion,
		pa.create_time,
		pa.last_edit_time,
		ui.name uiname
		FROM
		ylc_party_activist pa
		INNER JOIN
		ylc_user_info ui
		ON
		pa.user_id=ui.id
		<where>
			<if test="targetItem.id>0">
			and pa.id = #{targetItem.id}
			</if>
			<if test="targetItem.userId>0">
			and pa.user_id = #{targetItem.userId}
			</if>
		</where>
	</select>
	<insert id="insertIntoPartyActivistByTargetItem" parameterType="com.organization.ylcsys.entity.PartyActivist"
		useGeneratedKeys="true">
		INSERT INTO
		ylc_party_activist(user_id,apply_date,is_checked,is_checked_opinion,
		create_time,last_edit_time)
		VALUES
		(#{targetItem.userId},#{targetItem.applyDate},
		#{targetItem.isChecked},#{targetItem.isCheckedOpinion},
		#{targetItem.createTime},#{targetItem.lastEditTime})
	</insert>
	<update id="updatePartyActivistByTargetItem" parameterType="com.organization.ylcsys.entity.PartyActivist"
		>
		UPDATE ylc_party_activist
		<set>
			<if test="targetItem.userId!= null">user_id=#{targetItem.userId},</if>
			<if test="targetItem.applyDate!= null">apply_date=#{targetItem.applyDate},</if>
			<if test="targetItem.isChecked!= null">is_checked=#{targetItem.isChecked},</if>
			<if test="targetItem.isCheckedOpinion!= null">is_checked_opinion=#{targetItem.isCheckedOpinion},</if>
			<if test="targetItem.lastEditTime!= null">last_edit_time=#{targetItem.lastEditTime}</if>
		</set>
		WHERE
		id = #{targetItem.id}
	</update>
	<delete id="deletePartyActivistByTargetItem">
		DELETE FROM
		ylc_party_activist
		WHERE
		id = #{targetItem.id}
	</delete>
</mapper>
    