<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.organization.ylcsys.dao.PartyBranchDao">
	<select id="queryPartyBranchAll" resultType="com.organization.ylcsys.entity.PartyBranch">
		SELECT
		id,
		name,
		content,
		create_time,
		last_edit_time
		FROM
		ylc_party_branch
	</select>
	<select id="queryPartyBranchByTargetItem"  resultType="com.organization.ylcsys.entity.PartyBranch">
		SELECT
		id,
		name,
		content,
		create_time,
		last_edit_time
		FROM
		ylc_party_branch
		<where>
			<if test="targetItem.id>0">
			and id = #{targetItem.id}
			</if>
			<if test="targetItem.name!=null">
			and name = #{targetItem.name}
			</if>
		</where>
	</select>
	<insert id="insertIntoPartyBranchByTargetItem" parameterType="com.organization.ylcsys.entity.PartyBranch"
		useGeneratedKeys="true">
		INSERT INTO
		ylc_party_branch(name,content,
		create_time,last_edit_time)
		VALUES
		(#{targetItem.name},#{targetItem.content},
		#{targetItem.createTime},#{targetItem.lastEditTime})
	</insert>
	<update id="updatePartyBranchByTargetItem" parameterType="com.organization.ylcsys.entity.PartyBranch"
		>
		UPDATE ylc_party_branch
		<set>
			<if test="targetItem.name!= null">name=#{targetItem.name},</if>
			<if test="targetItem.content!= null">content=#{targetItem.content},</if>
			<if test="targetItem.lastEditTime!= null">last_edit_time=#{targetItem.lastEditTime}</if>
		</set>
		WHERE
		id = #{targetItem.id}
	</update>
	<delete id="deletePartyBranchByTargetItem">
		DELETE FROM
		ylc_party_branch
		WHERE
		id = #{targetItem.id}
	</delete>
</mapper>
    